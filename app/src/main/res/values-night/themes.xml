<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FurnitureStore" parent="Theme.MaterialComponents.DayNight">

        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:windowBackground">@color/background_color</item>

        <item name="android:windowIsTranslucent">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:textColor">@color/white</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.AppCompat.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_home</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

        <item name="android:statusBarColor" tools:target="l">?attr/colorPrimaryVariant</item>

    </style>

    <!--    Dark mode on-->
    <style name="SCREEN">
        <item name="android:background">@color/black</item>
    </style>

    <string name="THEMES_MODE">@string/light</string>

    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BUTTON">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BUTTON_CARD">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BACKGROUND_LINE">
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="TEXT_INPUT">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="ICON_COLOR">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="FAB_BUTTON">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="BUTTON_NAV" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@color/black</item>
    </style>

    <style name="imageColor">
        <item name="tint">@color/white</item>
    </style>

    <style name="SEARCH">
        <item name="background">@color/bg_search</item>
    </style>
</resources>