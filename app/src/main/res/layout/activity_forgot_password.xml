<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-2dp"
            android:contentDescription="back"
            android:src="@drawable/ic_back" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/forgot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/descForgot"
            android:text="@string/forgot_password_txt"
            android:textColor="@color/txt_color"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginTop="16dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/descForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/forgot_password_desc_txt"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lyt_editTxt"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_centerVertical="true"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:ignore="UselessParent">
           <EditText
               android:layout_marginVertical="16dp"
               android:id="@+id/emInput"
               android:inputType="text"
               android:layout_width="match_parent"
               android:hint="@string/enter_your_email_address_txt"
               android:layout_height="60dp"
               android:autofillHints="Email" />

           <LinearLayout
               android:id="@+id/lyt_resendCode"
               android:layout_below="@id/emInput"
               android:layout_centerHorizontal="true"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/i_did_not_receive_a_code_txt"/>
               <TextView
                   android:id="@+id/resendCodeBtn"
                   android:layout_marginStart="4dp"
                   android:textStyle="bold"
                   android:textColor="@color/txt_color"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/resend_txt"/>
           </LinearLayout>
                      <Button
                          android:layout_below="@id/lyt_resendCode"
                          android:background="@drawable/custom_style_btn"
                          android:layout_marginVertical="10dp"
                          android:layout_centerHorizontal="true"
                          android:layout_gravity="center"
                          android:textColor="@color/white"
                          android:id="@+id/loginBtn"
                          android:text="Verify"
                          android:layout_width="match_parent"
                          android:layout_marginHorizontal="20dp"
                          android:layout_height="wrap_content"/>
       </RelativeLayout>
    </RelativeLayout>






</RelativeLayout>