<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        app:elevation="0dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@color/trans"
        android:layout_height="100dp">

         <LinearLayout
             android:paddingVertical="5dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:ignore="UseCompoundDrawables">
             <ImageView
                 android:id="@+id/backBtn"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:contentDescription="back"
                 android:src="@drawable/ic_back"
                 app:tint="@color/txt_color" />
             <TextView
                 android:layout_marginStart="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:textSize="24sp"
                 android:textStyle="bold"
                 android:textColor="@color/txt_color"
                 android:text="@string/sign_in_txt"/>
         </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <!--    </RelativeLayout>-->
    <RelativeLayout
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/lyt_editTxt"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <EditText
                android:layout_marginVertical="16dp"
                android:id="@+id/emInput"
                android:inputType="text"
                android:layout_width="match_parent"
                android:hint="@string/email_txt"
                android:layout_height="60dp"
                android:autofillHints="Email" />
            <EditText
                android:layout_below="@id/emInput"
                android:autofillHints="password"
                android:id="@+id/pwInput"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:hint="@string/pwInput"
                android:layout_height="60dp"
                android:inputType="textPassword" />
            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_alignEnd="@id/pwInput"
                android:layout_below="@id/pwInput"
                android:id="@+id/fg_lyt"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_your_password_txt"/>
                <TextView
                    android:id="@+id/forgotPsBtn"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clickHereBtn"/>
            </LinearLayout>
            <Button
                android:background="@drawable/custom_style_btn"
                android:layout_marginVertical="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/fg_lyt"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/signInBtn"
                android:text="@string/signIn_txt"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/lytSignUp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/signInBtn"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/don_t_have_an_account_txt"/>
                <TextView
                    android:id="@+id/signUpBtn"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_txt"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@id/lytSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"/>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardElevation="10dp"
                    android:layout_marginHorizontal="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_google" />
                        <TextView
                            android:textStyle="bold"
                            android:paddingHorizontal="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign in with Google"
                            android:textAlignment="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>